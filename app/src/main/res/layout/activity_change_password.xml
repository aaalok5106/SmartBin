<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    tools:context="com.mridul.smartbin.ChangePassword">

    <EditText
        android:id="@+id/et_oldPasswd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="75dp"
        android:hint="Old Password"
        android:inputType="textPassword"
        android:maxLines="1"
        android:textColorHint="#0b449f"/>

    <EditText
        android:id="@+id/et_newPasswd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="35dp"
        android:hint="New Password"
        android:inputType="textPassword"
        android:maxLines="1"
        android:textColorHint="#e1306e"/>

    <EditText
        android:id="@+id/et_confNewPasswd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="35dp"
        android:hint="Confirm New Password"
        android:inputType="textPassword"
        android:maxLines="1"
        android:textColorHint="#e1306e"/>

    <Button
        android:id="@+id/btn_changePasswd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_gravity="center"
        android:text="Submit"/>

</LinearLayout>
